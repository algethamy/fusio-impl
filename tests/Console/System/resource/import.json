{
    "actionClass": [
        "Fusio\\Adapter\\V8\\Action\\V8Processor",
        "Fusio\\Adapter\\Util\\Action\\UtilStaticResponse",
        "Fusio\\Adapter\\Sql\\Action\\SqlTable"
    ],
    "connectionClass": [
        "Fusio\\Adapter\\Sql\\Connection\\Sql",
        "Fusio\\Adapter\\Sql\\Connection\\SqlAdvanced"
    ],
    "connection": [
        {
            "name": "New-Connection",
            "class": "Fusio\\Adapter\\Sql\\Connection\\Sql",
            "config": {
                "type": "pdo_mysql",
                "host": "127.0.0.1",
                "username": "root",
                "database": "fusio"
            }
        }
    ],
    "schema": [
        {
            "name": "New-Schema",
            "source": {
                "id": "http:\/\/phpsx.org#",
                "title": "test",
                "type": "object",
                "properties": {
                    "title": {
                        "type": "string"
                    },
                    "content": {
                        "type": "string"
                    },
                    "date": {
                        "type": "string",
                        "format": "date-time"
                    }
                }
            }
        }
    ],
    "action": [
        {
            "name": "Test-Action",
            "class": "Fusio\\Adapter\\Util\\Action\\UtilStaticResponse",
            "config": {
                "response": "{\"foo\": \"bar\"}"
            }
        }
    ],
    "routes": [
        {
            "path": "\/bar",
            "config": [{
                "version": 1,
                "status": 4,
                "methods": {
                    "GET": {
                      "active": true,
                      "public": true,
                      "action": "Test-Action",
                      "response": "New-Schema"
                    }
                }
            }]
        }
    ]
}
